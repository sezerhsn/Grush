{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "mocha"],
    "noEmit": true
  },
  "include": [
    "hardhat.config.ts",
    "contracts/**/*.ts",
    "por/**/*.ts",
    "tools/**/*.ts"
  ]
}
